{
  "homepage": ".",
  "name": "file_viewer",
  "version": "0.1.0",
  "private": true,
  "deploy-path": "../lightning/FX_React_Wrapper/force-app/main/default/staticresources/",
  "dependencies": {
    "@salesforce-ux/design-system": "2.9.4",
    "@salesforce/design-system-react": "0.10.11",
    "lightning-container": "^1.0.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-scripts": "3.1.1",
    "axios": "0.19.0",
    "query-string": "6.8.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-app-rewired build",
    "build:lightning": "npm run build && npm run deploy",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "format": "prettier --write './src/**/*.{js,json,css,scss}'",
    "deploy": "node ./deploy.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "printWidth": 100
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "fs-extra": "8.1.0",
    "jsforce": "1.9.2",
    "node-sass": "4.12.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "react-app-rewired": "2.1.3"
  }
}
